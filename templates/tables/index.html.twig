{% extends 'base.html.twig' %}


{% block title %}Tables | Admin{% endblock %}

{% block content %}
<div class="container-fluid">


    <h1 class="h3 mb-4 text-gray-800">Tables</h1>
    <a class="btn btn-primary btn-sm " href="{{ path('tables_new') }}">Ajouter</a>

    <hr>


    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th style="text-transform: capitalize;">Numéro de table</th>
                <th style="text-transform: capitalize;">état de la table</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for table in tables %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ table.number }}</td>
                <td>
                    

                    {% if table.status == 0 %}
                        <span class="badge bg-dark text-white">
                            fermée
                        </span>
                    {% endif %}

                    {% if table.status == 1 %}
                        <span class="badge bg-success text-white">
                            ouverte
                        </span>
                    {% endif %}

                    {% if table.status == 2 %}
                        <span class="badge bg-warning text-white">
                            en cours
                        </span>
                    {% endif %}

                    {% if table.status == 3 %}
                        <span class="badge bg-danger text-white">
                            en envoyée
                        </span>
                    {% endif %}

                    
                    
                </td>
                    <td>
                        {% if table.status != 0 %}
                            <a href="{{ path('tables_show', {'id': table.id}) }}" class="mr-5">
                                <i class="fas fa-utensils"></i>
                            </a>
                        {% endif %}

                        <a href="{{ path('tables_edit', {'id': table.id}) }}">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


</div>
{% endblock %}
